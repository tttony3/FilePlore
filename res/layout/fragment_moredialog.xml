<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_moreoption_copy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rl_selector"
            android:clickable="true" >

            <TextView
                android:id="@+id/tv_moreoption_copy"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:text="复制"
                android:textSize="@dimen/textsize_option" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_moreoption_copy"
                android:layout_marginEnd="7dp"
                android:layout_marginStart="7dp"
                android:background="@color/main_background" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_moreoption_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
              android:background="@drawable/rl_selector"
            android:clickable="true" >

            <TextView
                android:id="@+id/tv_moreoption_delete"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:text="删除"
                android:textSize="@dimen/textsize_option" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_moreoption_delete"
                android:layout_marginEnd="7dp"
                android:layout_marginStart="7dp"
                android:background="@color/main_background" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_moreoption_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
              android:background="@drawable/rl_selector"
            android:clickable="true" >

            <TextView
                android:id="@+id/tv_moreoption_share"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:text="共享"
                android:textSize="@dimen/textsize_option" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_moreoption_share"
                android:layout_marginEnd="7dp"
                android:layout_marginStart="7dp"
                android:background="@color/main_background" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_moreoption_push"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
              android:background="@drawable/rl_selector"
            android:clickable="true" >

            <TextView
                android:id="@+id/tv_moreoption_push"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:text="推送"
                android:textSize="@dimen/textsize_option" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_moreoption_push"
                android:layout_marginEnd="7dp"
                android:layout_marginStart="7dp"
                android:background="@color/main_background" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_moreoption_qr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
              android:background="@drawable/rl_selector"
            android:clickable="true"
            android:focusable="true" >

            <TextView
                android:id="@+id/tv_moreoption_qr"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:text="二维码"
                android:textSize="@dimen/textsize_option" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_moreoption_qr"
                android:layout_marginEnd="7dp"
                android:layout_marginStart="7dp"
                android:background="@color/main_background" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_moreoption_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
              android:background="@drawable/rl_selector"
            android:clickable="true"
            android:focusable="true" >

            <TextView
                android:id="@+id/tv_moreoption_detail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:text="属性"
                android:textSize="@dimen/textsize_option" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_moreoption_detail"
                android:layout_marginEnd="7dp"
                android:layout_marginStart="7dp"
                android:background="@color/main_background" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>