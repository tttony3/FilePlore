<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_classify_dir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp" />

    <GridView
        android:id="@+id/gv_classify"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_classify_dir"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:columnWidth="@dimen/griditem_img"
        android:gravity="center_horizontal"
       
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="17dp" />
    <!-- android:columnWidth="110dp" android:horizontalSpacing="7dp" -->

</RelativeLayout>