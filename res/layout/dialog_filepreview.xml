<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TableRow android:padding="2dp" 
        android:clickable="true"
        android:id="@+id/tr_filepreview_1"
        	android:background="@drawable/corners_selector">

        <ImageView
            android:id="@+id/iv_filepreview_1"
            android:layout_width="@dimen/filepreview_img_size"
            android:layout_height="@dimen/filepreview_img_size"
            android:contentDescription="@string/img_description" />

        <TextView
             android:focusable="false"
            android:clickable="false"
            android:id="@+id/tv_filepreview_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingStart="2dp"
             android:paddingEnd="2dp"
            android:paddingTop="5dp"
            android:textSize="12sp" />
    </TableRow>

