<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:id="@+id/samba_op">
    <TableRow >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="服务器地址："> 
       </TextView>
       <EditText 
           android:layout_marginLeft="5dp"
           android:id="@+id/ip"
           android:layout_width="wrap_content"
              android:ems="10"
        
           android:layout_height="wrap_content"          
           />
               
    </TableRow>
    <TableRow >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="用户名："> 
       </TextView>
       <EditText 
           android:layout_marginLeft="5dp"
           android:id="@+id/user"
           android:layout_width="wrap_content"
              android:ems="10"
        
           android:layout_height="wrap_content"          
           />
               
    </TableRow>
    <TableRow >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="密码："> 
       </TextView>
       <EditText 
           android:layout_marginLeft="5dp"
           android:id="@+id/password"
           android:layout_width="wrap_content"
              android:ems="10"
        
           android:layout_height="wrap_content"          
           />
               
    </TableRow>
    <TableRow >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="文件夹："> 
       </TextView>
       <EditText 
           android:layout_marginLeft="5dp"
           android:id="@+id/dir"
           android:layout_width="wrap_content"
              android:ems="10"
        
           android:layout_height="wrap_content"          
           />
               
    </TableRow>
    

</TableLayout>
